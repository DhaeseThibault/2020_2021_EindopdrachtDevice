<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HorecaGhent.Views.FavoriteRestaurant"
             NavigationPage.HasNavigationBar="False">

    <StackLayout BackgroundColor="#171721">
        <!--Topbar-->
        <Grid>
            <BoxView BackgroundColor="DarkOrange" HeightRequest="70"/>
            <Label x:Name="lblRestaurantName" Text="Favorite Restaurants" FontSize="30" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
        </Grid>
        <BoxView HeightRequest="2" Margin="0,-6,0,0" BackgroundColor="White"/>

        <Frame Margin="32,32,32,32" BackgroundColor="Silver" CornerRadius="20" HasShadow="True">
            <ListView x:Name="lvwFavorites">

            </ListView>            
        </Frame>
            
    </StackLayout>
</ContentPage>