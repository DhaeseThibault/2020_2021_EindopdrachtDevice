<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HorecaGhent.Views.RestaurantInformation"
             NavigationPage.HasNavigationBar="False">

    <StackLayout BackgroundColor="#171721">
        <!--Topbar-->        
        <Grid>
            <BoxView BackgroundColor="DarkOrange" HeightRequest="50"/>
            <Label x:Name="lblRestaurantName" Text="" FontSize="30" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
        </Grid>
        <BoxView HeightRequest="2" Margin="0,-6,0,0" BackgroundColor="White"/>

        <!--Showing all the offers from the restaurant-->
        <Label Text="Offer:" FontSize="25" FontAttributes="Bold" TextColor="White" Margin="32,16,0,0"/>
        <Label x:Name="lblOffer" FontSize="20" TextColor="White" Margin="32,8,0,0" LineHeight="1.2">
            <Label.Text >
            </Label.Text>
        </Label>

    </StackLayout>
</ContentPage>